<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.AddFeedFragment">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:textSize="25sp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="5dp"
        android:id="@+id/addArticleTitleET"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addArticleDescriptionET"
        android:layout_below="@id/addArticleTitleET"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Description"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/addArticleBodyET"
        android:layout_below="@id/addArticleDescriptionET"
        android:hint="Please Enter the Content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tags"
        android:layout_below="@id/addArticleBodyET"
        android:id="@+id/addArticleTagsET"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addArticleTagsET"
        android:id="@+id/addArticleBtn"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:text="Add Feed"
        />

</RelativeLayout>